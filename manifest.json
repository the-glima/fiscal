{
  "name" : "PR Fiscal",
  "version" : "0.1.0",
  "description" : "A Chrome Extension for checking PRs matches.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon" : {
      "16" : "images/icon-16.png",
      "48" : "images/icon-48.png"
    },
    "default_title" : "PR Fiscal",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.min.js"],
    "persistent": false
  },
  "content_scripts": [{
    "js" : ["contentscript.min.js"],
    "matches": [
      "*://dev.azure.com/payvision/*/_git/*",
      "*://github.com/*/*/pull/*"
    ]
  }],
  "icons" : {
    "16" : "images/icon-16.png",
    "32" : "images/icon-32.png",
    "48" : "images/icon-48.png",
    "128" : "images/icon-128.png"
  }
}
