{
  "name" : "fiscal",
  "version" : "0.1.0",
  "description" : "A Chrome Extension for checking PRs matches.",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "dist/images/icon.png",
    "default_popup": "dist/popup.html"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/",
        "https://dev.azure.com/payvision/B-Ops/_git/*",
        "https://github.com/the-glima/fiscal/pull/*"
      ],
      "js" : ["dist/contentscript.min.js"]
    }
  ]
}
